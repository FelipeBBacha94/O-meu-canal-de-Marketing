    <script>
        document.querySelectorAll('.brain-area').forEach(area => {
            area.addEventListener('click', () => {
                document.querySelectorAll('.brain-area').forEach(a => {
                    a.classList.remove('active');
                });
                area.classList.add('active');
                
                document.querySelectorAll('.folder-section').forEach(folder => {
                    folder.classList.remove('active');
                });
                
                const folderId = area.id + '-folder';
                document.getElementById(folderId).classList.add('active');
            });
        });
    </script>
